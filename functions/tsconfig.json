{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
